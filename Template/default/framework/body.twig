<!DOCTYPE html>
{% spaceless %}
<html lang="en">
  <head>
    {% block head %}
      <title>{% block title %}{% endblock %}</title>
      <meta http-equiv="Content-Type" content="{% block content_type %}text/html; charset=UTF-8{% endblock content_type %}"/>
      <meta name="robots" content="{% block robots %}noindex,nofollow{% endblock robots %}" />
      <meta name="description" content="{% block description %}{% endblock %}" />
      <meta name="keywords" content="{% block keywords %}{% endblock %}" />
      <meta name=”content-language” content=”{% block content_language %}{% if app.translator.locale == 'de' %}de{% else %}en{% endif %}{% endblock content_language %}” />
      <meta name="viewport" content="{% block viewport %}width=device-width, initial-scale=1.0{% endblock viewport %}" />
      <meta name="generator" content="kitFramework (https://kit2.phpmanufaktur.de)" />
      {% block stylesheet %}
        {# Bootstrap #}
        <link rel="stylesheet" type="text/css" href="{{ LIBRARY_URL }}/bootstrap/3.0.3/css/bootstrap.min.css" />
        <link  rel="stylesheet" type="text/css"href="{{ LIBRARY_URL }}/font-awesome/4.0.3/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Basic/Template/default/framework/css/framework.css" media="screen, projection" />
      {% endblock stylesheet %}
      {% block jquery %}
        {# 
          jQuery will be loaded at the footer in block footer_jquery! 
          HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries
          WARNING: Respond.js doesn't work if you view the page via file:// 
        #}
        <!--[if lt IE 9]>
          <script type="text/javascript" src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script type="text/javascript" src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
      {% endblock jquery %}
      <link rel="shortcut icon" type="image/x-icon" href="{{ MANUFAKTUR_URL }}/Basic/Template/default/framework/image/favicon.ico" />
    {% endblock head %}
  </head>
  <body>
    {% block user_navigation %}  
      <header class="navbar navbar-default" role="navigation"> 
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="https://kit2.phpmanufaktur.de" target="_blank" title="kitFramework"><i class="fa fa-puzzle-piece"></i>&nbsp;kitFramework - &copy; {{ 'now'|date('Y') }} by phpManufaktur</a>
          </div>
          {% if isAuthenticated() %}
            <ul class="nav navbar-nav navbar-right">
              <li class="navbar-text">{{ getUserDisplayName() }}</li>
              <li class="navbar-link"><a href="{{ FRAMEWORK_URL }}/admin/account" title="{{ 'Account'|trans }}"><span class="glyphicon glyphicon-user"></span></a></li>
              <li class="navbar-link"><a href="{{ FRAMEWORK_URL ~ '/logout' }}" title="{{ 'Logout'|trans }}"><span class="glyphicon glyphicon-log-out"></span></a></li>
            </ul>
          {% endif %}
        </div>
      </header>      
    {% endblock user_navigation %}
    <div id="content_wrap">
      {# add a hint at all dialogs which must be redesigned for Bootstrap ... #}
      {% include '@phpManufaktur/Basic/Template/default/pattern/bootstrap/pending.twig' %}
      {% block content %}{% endblock %}
    </div>
    
         
    {% block footer %}
      {# files for the footer #}
      {% block footer_jquery %}
        <script type="text/javascript" src="{{ LIBRARY_URL }}/jquery/jquery/1.10.2/jquery.min.js"></script>
        <script type="text/javascript" src="{{ LIBRARY_URL }}/bootstrap/3.0.3/js/bootstrap.min.js"></script>
      {% endblock footer_jquery %} 
    {% endblock footer %}
  </body>
</html>
{% endspaceless %}