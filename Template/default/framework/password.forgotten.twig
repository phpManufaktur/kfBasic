{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block title %}{{ 'Forgot your password?'|trans }}{% endblock %}
{% block content %}
  <div class="container">
    <div class="page-header">
      <h1>{{ 'Forgot your password?'|trans }} <small>kitFramework</small></h1>
    </div>
    
    {{ alert }}
    
    {% if alert|length < 1 %}
      {% include '@phpManufaktur/Basic/Template/default/pattern/bootstrap/alert.twig' 
        with {content:'If you have forgotten your password, you can order a link to create a new one. Please type in the email address assigned to your account and submit the form.'|trans} only %}
    {% endif %}  
    
    {% form_theme form '@phpManufaktur/Basic/Template/default/framework/form.fields.horizontal.twig' %}
    
    <form class="form-horizontal" action="{{ FRAMEWORK_URL }}/password/reset" method="post" role="form">
      {{ form_widget(form) }}  
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <button type="submit" class="btn btn-default">{{ 'Submit'|trans }}</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}