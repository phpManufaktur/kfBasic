{% if usage == 'framework' %}
    {% set template_namespace = '@phpManufaktur/Basic/Template' %}
    {% set template_file = 'framework/body.twig' %}
{% else %}
    {% set template_namespace = '@phpManufaktur/Basic/Template' %}
    {% set template_file = 'framework/backend.body.twig' %}
{% endif %}
{% extends getTemplateFile(template_namespace, template_file) %}
{% block title %}{{ 'kitFramework - First Login'|trans }}{% endblock %}
{% block head %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Basic/Template/default/framework/css/login.css" media="screen, projection" />
{% endblock %}
{% block content %}
  <div class="login_form">
    <h2>{{ 'kitFramework - Login'|trans }}</h2>
    {% if app.translator.locale == 'de' %}
      {# GERMAN language #}
      {% if message|length > 0 %}
        <div class="message">{{ message|trans }}</div>
      {% else %}
        <div class="message">
          <p>Hallo {{ display_name }},</p>
          <p>sie rufen das kitFramework zum ersten Mal auf.</p>
          <p>Sie sind bereits in {{ cms_type }} eingeloggt. Damit Sie künftig automatisch mit Ihrem Konto am kitFramework angemeldet werden können, müssen Sie einmalig Ihr Passwort eingeben.</p>
        </div>
      {% endif %}
    {% else %}
      {# ENGLISH language #}
      {% if message|length > 0 %}
        <div class="message">{{ message|trans }}</div>
      {% else %}
        <div class="message">
          <p>Hello {{ display_name }},</p>
          <p>this is the first time you are executing the kitFramework.</p>
          <p>You are already logged in  at {{ cms_type }}. To enable a auto-login into the kitFramework you must authenticate with your password only one times.</p>
        </div>
      {% endif %}
    {% endif %}
    <form action="{{ FRAMEWORK_URL }}/welcome/login/check?usage={{ usage }}" method="post" {{ form_enctype(form) }}>
      {{ form_widget(form) }}
      <label>&nbsp;</label><input type="submit" name="submit" />
      <div class="clear"></div>
    </form>
  </div>
{% endblock %}
{% block footer %}
  {{ parent() }}
  <script type="text/javascript">
    if (typeof 'jQuery' !== 'undefined') {
      $(document).ready(function() {
        {# set focus to the password field #}
        $('input[id=form_password]').focus();
      });
    }
  </script>
{% endblock footer %}
