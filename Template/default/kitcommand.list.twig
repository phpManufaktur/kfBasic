<div class="kitcommand list">
  <div style="">
    {% for command in commands %}
      <div class="list_item_container">
        <div class="list_item_command">~~ {{ command.command }} ~~</div>
        {% if command.info.vendor.name is defined %}
          <div class="list_item_vendor">
            {% if command.info.vendor.url is defined %}
              <a href="{{ command.info.vendor.url }}" target="_blank">{{ command.info.vendor.name }}</a>
            {% else %}
              {{ command.info.vendor.name }}
            {% endif %}
          </div>
        {% endif %}
        {% if command.info.name is defined %}
          <div class="list_item_command_name">{{ command.info.name }}</div>
        {% endif %}
        {% if command.info.description is defined %}
          <div class="list_item_command_description">{{ command.info.description }}</div>
        {% endif %}        
        {% if command.info.info.url is defined %}
          <div class="list_item_command_info">
            <div class="list_item_command_info_block">
              <a href="{{ command.info.info.url }}" target="_blank">{{ 'more information about <b>%command%</b> ...'|trans({'%command%':command.info.info.name}) }}</a>
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>