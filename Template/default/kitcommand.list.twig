<div style="border:1px solid #ccc; color:#363636; background-color:#fff; margin:20px 0 10px 0; padding:10px; font-family:'Lucida Sans Unicode','Lucida Grande',sans-serif; font-size:13px;">
  <div style="">
    {% for command in commands %}
      <div style="margin:10px 0 0 0; padding:0;">
        <div style="font-size:16px; font-weight: bold; color: #4169e1; background-color: transparent;"><code>~~ {{ command.command }} ~~</code></div>
        {% if command.info.vendor.name is defined %}
          <div style="font-size:9px;text-align: right;">
            {% if command.info.vendor.url is defined %}
              <a href="{{ command.info.vendor.url }}" target="_blank">{{ command.info.vendor.name }}</a>
            {% else %}
              {{ command.info.vendor.name }}
            {% endif %}
          </div>
        {% endif %}
        {% if command.info.name is defined %}<div style="margin:5px 0 0 30px; font-weight: bold;">{{ command.info.name }}</div>{% endif %}
        {% if command.info.description is defined %}<div style="margin:5px 0 0 30px; font-weight: normal; font-style: italic;">{{ command.info.description }}</div>{% endif %}
        
        {% if command.info.info.url is defined %}
          <div style="margin: 5px 0 0 30px;padding: 0;text-align: right; font-size: 10px;">
            <div style="display:inline-block"><a href="{{ command.info.info.url }}" target="_blank">{{ 'more information about <b>%command%</b> ...'|trans({'%command%':command.info.info.name}) }}</a></div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>